<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="formation_contacts" resource="default" comment="Contacts Table">
        <column xsi:type="int" name="contacts_id" padding="11" unsigned="false" nullable="false" identity="true" comment="Contacts ID"/>
        <column xsi:type="varchar" name="name" length="1024" nullable="false" comment="Name" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="contacts_id"/>
        </constraint>
    </table>
</schema>
